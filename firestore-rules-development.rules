rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Temporary development rules - REPLACE BEFORE PRODUCTION!
    // These rules allow authenticated users to read/write all documents
    
    // Users collection - allow read/write for authenticated users
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    // Test collection - allow read/write for testing
    match /_test/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Logs collection - allow read/write for authenticated users
    match /logs/{logId} {
      allow read, write: if request.auth != null;
    }
    
    // Settings collection - allow read/write for authenticated users
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }
    
    // Analytics collection - allow read/write for authenticated users  
    match /analytics/{analyticsId} {
      allow read, write: if request.auth != null;
    }
    
    // Any other collections - allow read/write for authenticated users
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}